<h2>New Book</h2>
 <%= form_with model: @book, local:true do |f| %>
  <div class="field">
    <label for="title">Title</label>
  <%= f.text_field :title %>
  </div>
  <div class="field">
    <label for="body">Opinion</label>
  <%= f.text_area :body %>
  </div>
 <div class="action">
  <%= f.submit 'Create Book' %>
 </div>
<% end %>